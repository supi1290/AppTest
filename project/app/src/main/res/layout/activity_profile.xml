<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="scodun.com.a06soccer.activitys.ProfileActivity">


    <CheckBox
        android:id="@+id/checkGoalie"
        android:layout_width="368dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Goalie"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkDefender"
        android:layout_width="368dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:text="Defender"
        app:layout_constraintLeft_toLeftOf="@+id/checkGoalie"
        app:layout_constraintTop_toBottomOf="@+id/checkGoalie" />

    <CheckBox
        android:id="@+id/checkMidfielder"
        android:layout_width="368dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:text="Midfielder"
        app:layout_constraintLeft_toLeftOf="@+id/checkDefender"
        app:layout_constraintTop_toBottomOf="@+id/checkDefender" />

    <CheckBox
        android:id="@+id/checkForward"
        android:layout_width="368dp"
        android:layout_height="40dp"
        android:layout_marginTop="9dp"
        android:text="Forward"
        app:layout_constraintLeft_toLeftOf="@+id/checkMidfielder"
        app:layout_constraintTop_toBottomOf="@+id/checkMidfielder" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnSave"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_menu_save"
        android:layout_marginRight="36dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="29dp"
        android:layout_marginEnd="36dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_popup_sync"
        app:layout_constraintRight_toLeftOf="@+id/btnSave"
        android:layout_marginRight="20dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="29dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnreset"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/btnreset" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="66dp"
        android:layout_height="20dp"
        android:layout_marginBottom="7dp"
        android:text="Save"
        app:layout_constraintBottom_toTopOf="@+id/btnSave"
        android:layout_marginRight="26dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="292dp" />

</android.support.constraint.ConstraintLayout>
